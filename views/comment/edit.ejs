<% include ../partials/header.ejs %>

<div class="container mt-4">
  <div class="row">
    <div class="col-lg-4 col-md-12"></div>
    <div class="col-lg-4 col-md-12">
      <h2 class="my-5">Add a New Comment</h2>
      <form
        action="/campgrounds/<%= id %>/comments/<%= comment_id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <label for="description">Description of the place.</label>
          <textarea name="comment[text]" class="form-control" rows="5">
<%= comment.text %></textarea
          >
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-dark" type="submit">Edit</button>
        </div>
      </form>

      <a href="/campgrounds" class="text-decoration-none"> Go Back </a>
    </div>
    <div class="col-lg-4 col-md-12"></div>
  </div>
  <div>
    <% include ../partials/footer.ejs %>
  </div>
</div>
