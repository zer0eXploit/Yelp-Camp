<% include ../partials/header.ejs %>

<div class="container mt-4">
  <div class="row">
    <div style="width: 30%; margin: 0 auto;">
      <h3 class="my-5">Edit <strong><%= data.name %></strong></h3>
      <form action="/campgrounds/<%= data._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="name"
            value="<%= data.name %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="location"
            placeholder="Location Name"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="imageUrl"
            value="<%= data.imageUrl %>"
          />
        </div>
        <div class="form-group">
          <label for="description">Description of the place.</label>
          <textarea name="description" class="form-control">
                    <%= data.description %>
                    </textarea
          >
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-dark" type="submit">Save</button>
        </div>
      </form>

      <a href="/campgrounds/<%= data._id %>" class="text-decoration-none">
        Go Back
      </a>
    </div>
  </div>
  <div>
    <% include ../partials/footer.ejs %>
  </div>
</div>
